# based on accessibility needs for visually impaired
# (cf: https://www.reddit.com/r/javascript/comments/c8drjo/nobody_talks_about_the_real_reason_to_use_tabs/)

root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = tab
indent_size = 2

[*.{yaml,yml,gn,gni,md,toml}]
indent_style = space
